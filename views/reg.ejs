<div class="col-md-6 col-md-offset-3">
	<form action="" method="POST" class="form-horizontal" role="form">
			<div class="form-group">
				<legend>注册</legend>
			</div>

			<div class="form-group">
				<label for="username">用户名</label>
				<input type="text" name="username" id="username" class="form-control"  placeholder="你的账号名称，用于登录和显示">
			</div>
			<div class="form-group">
				<label for="password">口令</label>
				<input type="password" name="password" id="password" class="form-control" required="required" title="">
			</div>
			<div class="form-group">
				<label for="password-repeat">重复输入密码</label>
				<input type="password" name="password-repeat" id="password" class="form-control" required="required" title="">
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary btn-block">注册</button>
			</div>
	</form>
</div>